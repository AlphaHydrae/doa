.clearfix
  h2.name(ng-show = 'ui.status != "editing"') {{watch.name}}
  .status.btn-group
    button.btn.btn-sm.btn-default(ng-click = 'ui.status == "editing" ? save() : toggleDetails()', ng-class = 'watch|watchButtonClass:ui:true', ng-disabled = '!watch.name.trim().length') {{actionText()}}
    button.btn.btn-sm.btn-default(ng-click = 'toggleEdit()', ng-disabled = 'ui.busy', ng-class = 'watch|watchButtonClass:ui')
      span.glyphicon(ng-class = 'ui.status != "editing" ? "glyphicon-edit" : "glyphicon-ban-circle"')
    button.btn.btn-sm.btn-default.dropdown-toggle(data-toggle = 'dropdown', ng-class = 'watch|watchButtonClass:ui')
      span.caret
    ul.dropdown-menu
      li
        a.destroy(ng-click = 'destroy()') Delete
  form.form-inline(ng-show = 'ui.status == "editing"')
    .form-group.col-md-6
      input.name.form-control(type = 'text', ng-model = 'watch.name')
    .form-group
      select.interval.form-control(ng-model = 'watch.interval', ng-options = 'i.value as "watch.interval." + i.name|t for i in watchIntervals')
.details(collapse = '!ui.detailed')
  p.url
    code http://localhost:3000/{{watch.token}}
  p.lastPingedAt {{lastPingedAt()}}
